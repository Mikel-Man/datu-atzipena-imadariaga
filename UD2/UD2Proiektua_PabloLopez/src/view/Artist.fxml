<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="controller.ArtistController">
    <Label fx:id="lbl_izenburua" layoutX="107.0" layoutY="14.0" prefHeight="47.0" prefWidth="372.0" text="Artisten Zerrenda" />
    <TableView fx:id="tableview_artist" editable="true" layoutX="12.0" layoutY="70.0" prefHeight="200.0" prefWidth="630.0">
        <columns>
            <TableColumn fx:id="artistIdCol" prefWidth="200.0" text="Artist Id" />
            <TableColumn fx:id="nameCol" prefWidth="400.0" text="Izena" />
        </columns>
    </TableView>
    <HBox fx:id="botoiak" layoutX="12.0" layoutY="270.0" prefHeight="45.0" prefWidth="630.0">
        <children>
            <TextField fx:id="addName" prefWidth="500.0" promptText="Idatzi artista berriaren izenburua..." />
            <Button fx:id="btn_artistGehitu" text="Gehitu" onAction="#artistGehitu"/>
            <Button fx:id="btn_artistEzabatu" text="Ezabatu" onAction="#artistEzabatu"/>
        </children>
    </HBox> 
</AnchorPane>
